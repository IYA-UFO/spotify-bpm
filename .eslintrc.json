{
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "no-console": 1,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/prop-types": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "plugins": ["jsx-a11y", "react", "prettier", "react-hooks"],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8"
    }
  }
}
